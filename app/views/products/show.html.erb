<p style="color: green"><%= notice %></p>

<%= render @product %>

<% if @product.collection_items.find_by(user_id: current_user) %>
  <%= render @product.collection_items.find_by(user_id: current_user) %>
<%end%>

<ul class="flex py-4 flex-wrap">
  <li class="my-2 "><%= link_to "Edit this product", edit_product_path(@product), class: "link-primary" %></li>
  <li class="my-2 ml-4"><%= link_to "Back to products", products_path, class: "link-primary" %></li>
  <li class="my-2 ml-4"><%= button_to "Destroy this product", @product, method: :delete, class: "link-primary" %></li>
</ul>