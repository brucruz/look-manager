          <div class="flex flex-col justify-end py-2">
            <% if product_variant.old_price %>
              <span class="text-gray-400 text-sm md:text-md line-through"><%= number_to_currency(product_variant.old_price) %></span>
              <span class="text-gray-950 md:text-lg font-bold"><%= number_to_currency(product_variant.price) %></span>
            <% else %>
              <span class="text-gray-950 md:text-lg font-bold"><%= number_to_currency(product_variant.price) %></span>
            <% end %>
            <span class="text-gray-500 text-sm md:text-md"><%= t('views.products.show.price.installments', installments: product_variant.installment_quantity, price: number_to_currency(product_variant.installment_value)) %></span>
          </div>
