        <div class="mt-4">
          <div class="prose max-w-none">
            <p>
              <%= @product.description %>
            </p>
          </div>

          <%# <button class="mt-2 text-sm font-medium underline">Read More</button> %>
        </div>

        <div class="mt-8">
            <% if product_variant.sizes.count > 0 %>
              <legend class="mb-1 text-sm font-medium"><%= t('views.products.show.sizes') %></legend>

              <div class="flex flex-wrap gap-1">
                <% product_variant.sizes.each do |size| %>
                  <div class='group relative inline-flex h-8 w-8 items-center justify-center rounded-full border text-xs font-medium <%= size["available"] ? "bg-black text-white" : "" %>'>
                    <span
                      class="absolute bottom-9 opacity-0 font-medium text-gray-950 transition ease-in-out duration-500 group-hover:opacity-100 bg-gray-50 py-1 px-3"
                    >
                      <%= size['available'] ? t('available') : t('not_available') %>
                    </span>

                    <%= size["size"].upcase %>
                  </div>
                <% end %>
              </div>
            <% end %>


          <% if @product.product_variants.count > 1 %>
            <div class="mt-4">
              <legend class="mb-1 text-sm font-medium"><%= t('views.products.show.options') %></legend>

              <div class="flex flex-wrap gap-1">
                <% @product.product_variants.each do |variant| %>
                  <% id = "variant-#{variant.title.parameterize}" %>
                  <label for="<%= id %>" class="cursor-pointer">
                    <input
                      type="radio"
                      name="variant"
                      id="<%= id %>"
                      class="peer sr-only"
                    />

                    <span
                      class="group inline-block rounded-full border px-3 py-1 text-xs font-medium peer-checked:bg-black peer-checked:text-white"
                    >
                      <%= variant.title %>
                    </span>
                  </label>
                <% end %>
              </div>
            </div>
          <% end %>

