<div class="p-8">
  <p style="color: green"><%= notice %></p>

  <%= render @product %>

  <div id="<%= dom_id @product.collection_items.find_by(user_id: current_user) %>">
    <p>
      <strong>Color:</strong>
      <%= @product.collection_items.find_by(user_id: current_user).color %>
    </p>

    <p>
      <strong>Palette:</strong>
      <%= @product.collection_items.find_by(user_id: current_user).palette %>
    </p>

    <p>
      <strong>Contrast:</strong>
      <%= @product.collection_items.find_by(user_id: current_user).contrast %>
    </p>

    <p>
      <strong>Style:</strong>
      <%= @product.collection_items.find_by(user_id: current_user).style %>
    </p>

    <p>
      <strong>Body Type:</strong>
      <%= @product.collection_items.find_by(user_id: current_user).body_type %>
    </p>
  </div>

  <div class="flex py-4 flex-wrap">
    <div class="my-2 "><%= link_to "Edit this product", edit_product_path(@product), class: "link-primary" %></div>
    <div class="my-2 ml-4"><%= link_to "Back to products", products_path, class: "link-primary" %></div>
    <div class="my-2 ml-4"><%= button_to "Destroy this product", @product, method: :delete, class: "link-primary" %></div>
  </div>
</div>