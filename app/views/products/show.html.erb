              <li class="pr-4"><%= link_to "Add to Collection", new_product_collection_item_path(@product, @product.collection_items.find_by(user_id: current_user)), class: "btn-primary" %></li>
              <li class="pr-4"><%= link_to "Back to products", products_path, "data-turbo-frame": "_top", class: "link-primary" %></li>
