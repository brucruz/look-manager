<div id="<%= dom_id product %>">
  <p class="pb-1">
    <strong>Name:</strong>
    <%= product.name %>
  </p>

  <p class="pb-1">
    <strong>Sku:</strong>
    <%= product.sku %>
  </p>

  <p class="pb-1">
    <strong>Brand:</strong>
    <%= product.brand %>
  </p>

  <p class="pb-1">
    <strong>Store:</strong>
    <%= product.store %>
  </p>

  <p class="pb-1">
    <strong>Url:</strong>
    <%= product.url %>
  </p>

  <p class="pb-1">
    <strong>Store url:</strong>
    <%= product.store_url %>
  </p>

  <p class="pb-1">
    <strong>Description:</strong>
    <%= simple_format(product.description) %>
  </p>

  <% product.old_price.present? do %>
    <p class="pb-1">
      <strong>Old price:</strong>
      <%= product.old_price class: "line-through" %>
    </p>
    <% end %>

  <p class="pb-1">
    <strong>Price:</strong>
    <%= product.price %>
  </p>

  <p class="pb-1">
    <strong>Installment quantity:</strong>
    <%= product.installment_quantity %>
  </p>

  <p class="pb-1">
    <strong>Installment value:</strong>
    <%= product.installment_value %>
  </p>

  <p class="pb-1">
    <strong>Available:</strong>
    <%= product.available ? "Yes" : "No" %>
  </p>

</div>
